@model IEnumerable<demoofuserplans.Models.show>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="~/Scripts/jquery-3.3.1.min.js"></script>
<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

<input type="text" id="name" name="name" value="" /> <input type="button" id="SearchButton" name="SearchButton" value="Search" />

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.channel_name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.show_name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.channel_name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.show_name)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.channel_id }) |
            @Html.ActionLink("Details", "Details", new { id=item.channel_id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.channel_id })
        </td>
    </tr>
}

</table>


